@model ShoppingKartViewModel
@if(Model.ShoppingKart.ShoppingKartItems.Count>0)
{
    <li>
        <a>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.ShoppingKart.ShoppingKartItems.Count
            </span>
        </a>
    </li>
}